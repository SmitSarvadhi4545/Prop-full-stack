# Database Configuration
MONGODB_URI=mongodb://localhost:27017/playlist-manager
DATABASE_URL=mongodb://localhost:27017/playlist-manager

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:5000

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production

# Optional: Redis Configuration (for session storage in production)
# REDIS_URL=redis://localhost:6379

# Optional: Email Configuration (for password reset, etc.)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-email-password

# Optional: File Upload Configuration
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=uploads/

# Security Configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100

# Logging Configuration
# LOG_LEVEL=info
# LOG_FORMAT=combined

# Development Configuration
# DEBUG=true
# ENABLE_CORS=true
